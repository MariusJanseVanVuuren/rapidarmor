<%= render 'layouts/header' %>
<p id="notice"><%= notice %></p>

<h1>Liners</h1>

<table class="table table-inverse table-bordered">
  <thead>
    <tr>
      <th>Company</th>
      <th>Location</th>
      <th>Row</th>
      <th>Collumn</th>
      <th>Width</th>
      <th>Height</th>
      <th>Thickness</th>
      <th>Structure</th>
      <th>Plant</th>
      <th>Liner Reference</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @liners.each do |liner| %>
      <tr>
        <td><%= liner.company %></td>
        <td><%= liner.location %></td>
        <td><%= liner.row %></td>
        <td><%= liner.collumn %></td>
        <td><%= liner.width %></td>
        <td><%= liner.height %></td>
        <td><%= liner.thickness %></td>
        <td><%= liner.structure %></td>
        <td><%= liner.plant %></td>
        <td><%= liner.liner_reference %></td>
        <td><%= link_to 'Show', liner %></td>
        <td><%= link_to 'Edit', edit_liner_path(liner) %></td>
        <td><%= link_to 'Destroy', liner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<button>
<%= link_to 'New Liner', new_liner_path %>
</button>

<br>
<br>
<div class="container border">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h4>Import Liners from CSV file</h4>
      <%= form_tag import_liners_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Import CSV", class: "btn btn-primary"  %>
      <% end %>
    </div>
  </div>
</div>
